apiVersion: apps/v1
kind: Deployment
metadata:
  name: pharos-docs-<%= var.git_branch %>
spec:
  selector:
    matchLabels:
      app: pharos-docs-<%= var.git_branch %>
  replicas: 2
  template:
    metadata:
      labels:
        app: pharos-docs-<%= var.git_branch %>
      annotations:
        build: "<%= var.build_number %>"
    spec:
      containers:
        - image: "docker.io/kontena/pharos-docs:<%= var.git_branch %>"
          imagePullPolicy: Always
          name: gitbook
          ports:
            - containerPort: 80
          resources:
            limits:
              cpu: "100m"
              memory: "256Mi"
            requests:
              cpu: "20m"
              memory: "128Mi"